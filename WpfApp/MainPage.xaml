<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      x:Class="WpfApp.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" OpacityMask="Black" Background="#FFFF8F8F">
    
    <Page.Resources>
        <Style x:Key="BigLetter" TargetType="TextBox">
            <Setter Property="FontSize" Value="30px"></Setter>
            
        </Style>
        <Style x:Key="SmallLetter" TargetType="TextBox">
            <Setter Property="FontSize" Value="10px"></Setter>

        </Style>
    </Page.Resources>

    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="264,268,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Style="{StaticResource BigLetter}"/>
    </Grid>
</Page>
